{
    "baseConfig": "@tsconfig/node12/tsconfig.json",
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "strict": true,
      "noImplicitAny": true,
      "downlevelIteration": true,
      "allowUmdGlobalAccess": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "strictNullChecks": true,

      "declaration": false,
      "rootDir": "./",

      "sourceMap": false,
      "forceConsistentCasingInFileNames": true,

      "listEmittedFiles": true,

      "checkJs": true,
      "allowJs": true,
      "pretty": true,

      "outDir": "../../test",
      "typeRoots": [
          "../../@types",
          "../../node_modules/@types",
      ]
    },

    "include": [
        "../globals.d.ts",
        "../../@types/usercss-meta/index.d.ts",
        "./",
    ],
    "exclude": [
    ]
}
