{
  "baseConfig": "@tsconfig/node12/tsconfig.json",
  "extends": "./tsconfig.json",

  "include": [
      // "@types/, "src/globals.d.ts"**/*",
      "./src/globals.d.ts",
      "./src/**/*.ts",
  ],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "preserveWatchOutput": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    // "checkJs": true,
    // "allowJs": true,
    "skipLibCheck": true,
    "pretty": true,
    "downlevelIteration": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "listEmittedFiles": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
        "src/@types",
        "node_modules/@types",
    ],
    "module": "commonjs",
    "target": "es6",

    "rootDir": "./src",
    "outDir": "./",
    "sourceMap": true,

    "declaration": true,
    "declarationDir": "types",
  },
  "exclude": [
      "./webpack.config.ts",
      "./webpack.config.js",
      "./rollup.config.ts",
      "./rollup.config.js",
      "node_modules",
  ]
}
