{
  "baseConfig": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strict": true,
    // "checkJs": true,
    // "allowJs": true,
    "skipLibCheck": true,
    "pretty": true,
    "downlevelIteration": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "listEmittedFiles": true,
    "typeRoots": [
        "./@types",
        "node_modules/@types",
    ],
    "module": "commonjs",
    "target": "es6",

    "outDir": "lib",
    "sourceMap": true,

    // "declaration": true,
    // "declarationDir": "types",
  },
  "include": [
      "./@types",
      "./@types/globals.d.ts",
      "./@types/highlight.js-console/index.d.ts",
      // "@types/, "src/globals.d.ts"**/*",
      "./src/globals.d.ts",
      "src",
  ],
  "exclude": [
      "./webpack.config.ts",
      "./webpack.config.js",
      "./rollup.config.ts",
      "./rollup.config.js",
      "node_modules",
      "./types",
      "./test/*.js",
  ]
}
